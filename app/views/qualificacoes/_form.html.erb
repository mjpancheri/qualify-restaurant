      <%= form.collection_select(:cliente_id, Cliente.all, :id, :nome, {:prompt => true}) %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :restaurante_id %>
    <% if @qualificacao.restaurante %>
      <%= form.hidden_field :restaurante_id %>
      <%= @qualificacao.restaurante.nome %>
    <% else %>
      <%= form.collection_select(:restaurante_id, Restaurante.all, :id, :nome, {:prompt => true}) %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :nota %>
    <%= form.text_field :nota %>
  </div>

  <div class="field">
    <%= form.label :valor_gasto %>
    <%= form.text_field :valor_gasto %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
